@model IEnumerable<Universal_Hospital.Models.Nurse>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center text-primary mb-4">Nurse Index</h1>

<p class="text-center">
    <a class="btn btn-success" asp-action="Create"><i class="fas fa-plus"></i> Create New</a>
</p>

<!-- Search Form with Bootstrap -->
<form method="get" asp-action="Index" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Search by Name or Specialization" value="@ViewData["SearchString"]" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Search</button>
        </div>
    </div>
</form>

<!-- Table with Bootstrap classes for styling -->
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Shift)</th>
            <th>@Html.DisplayNameFor(model => model.DepartamentName)</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Shift)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartamentName)</td>
                
                <td class="text-center">
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.NurseId"><i class="fas fa-edit"></i> Edit</a> |
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.NurseId"><i class="fas fa-info-circle"></i> Details</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.NurseId"><i class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
