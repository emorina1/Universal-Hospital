@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <h1 class="text-center">Contact Us</h1>
    <p class="text-muted text-center">We’re here to answer your questions and provide the help you need.</p>
    <hr />

    <div class="row">
        <!-- Contact Details -->
        <div class="col-md-6">
            <h4>Contact Information</h4>
            <p><strong>Phone:</strong> +1 (123) 456-7890</p>
            <p><strong>Email:</strong> contact@medicalservice.com</p>
            <p><strong>Address:</strong> 123 Medical Street, Health City</p>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <h4>Send Us a Message</h4>
            <form>
                <div class="form-group">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter your name">
                </div>
                <div class="form-group">
                    <label for="email">Your Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Write your message"></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Send Message</button>
            </form>
        </div>
    </div>
</div>
