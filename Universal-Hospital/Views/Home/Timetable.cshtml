@{
    ViewData["Title"] = "Timetable";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Medical Service Timetable</h1>
    <p class="text-muted text-center mb-4">Find the availability of our doctors and plan your visit accordingly.</p>
    <hr />

   
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Day</th>
                    <th>Doctor</th>
                    <th>Specialization</th>
                    <th>Available Time</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Monday</td>
                    <td>Dr. Jane Smith</td>
                    <td>Cardiology</td>
                    <td>09:00 AM - 01:00 PM</td>
                </tr>
                <tr>
                    <td>Tuesday</td>
                    <td>Dr. John Doe</td>
                    <td>Pediatrics</td>
                    <td>10:00 AM - 02:00 PM</td>
                </tr>
                <tr>
                    <td>Wednesday</td>
                    <td>Dr. Emily Johnson</td>
                    <td>Orthopedics</td>
                    <td>08:00 AM - 12:00 PM</td>
                </tr>
                <tr>
                    <td>Thursday</td>
                    <td>Dr. Michael Brown</td>
                    <td>Dermatology</td>
                    <td>11:00 AM - 03:00 PM</td>
                </tr>
                <tr>
                    <td>Friday</td>
                    <td>Dr. Sarah Lee</td>
                    <td>General Medicine</td>
                    <td>09:00 AM - 01:00 PM</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Shtoni stilizime të personalizuara për tabelën */
    .table {
        background-color: #ffffff; /* Ngjyra e bardhë për tabelën */
        border-radius: 8px; /* Rrumbullakosni skajet e tabelës */
        overflow: hidden; /* Sigurohuni që skajet e rrumbullakosura të funksionojnë */
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Shtoni një hije për tabelën */
    }

    .thead-light th {
        background-color: #1b6ec2; /* Ngjyra e sfondit për header-in e tabelës */
        color: white; /* Ngjyra e tekstit për header-in e tabelës */
        text-align: center; /* Qëndroni tekstin në qendër */
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Ngjyra e sfondit kur kaloni me miun mbi rreshtin */
    }

    .btn-primary {
        background-color: #1b6ec2; /* Ngjyra kryesore për butonin */
        border-color: #1b6ec2; /* Ngjyra e kufirit të butonit */
    }

        .btn-primary:hover {
            background-color: #155a9c; /* Ngjyra kur butoni është në hover */
            border-color: #155a9c; /* Ngjyra e kufirit në hover */
        }
</style>
