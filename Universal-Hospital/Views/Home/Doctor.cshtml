@{
    ViewData["Title"] = "Our Doctors";
}

<div class="container mt-5">
    <h1 class="text-center">Meet Our Doctors</h1>
    <p class="text-muted text-center">Our team of highly qualified medical professionals is here to provide the best care.</p>
    <hr />

    <div class="row">
        <!-- Example of one doctor -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="/doc1.png" class="card-img-top" alt="Doctor Image">
                <div class="card-body">
                    <h5 class="card-title">Dr. Jane Smith</h5>
                    <p class="card-text"><strong>Specialization:</strong> Cardiology</p>
                    <p>Dr. Jane Smith has over 15 years of experience in treating heart conditions with utmost care and precision.</p>
                </div>
            </div>
        </div>

        <!-- Example of another doctor -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="/doc2.png" class="card-img-top" alt="Doctor Image">
                <div class="card-body">
                    <h5 class="card-title">Dr. John Doe</h5>
                    <p class="card-text"><strong>Specialization:</strong> Pediatrics</p>
                    <p>Dr. John Doe is a compassionate pediatrician who ensures the well-being of children at every stage.</p>
                </div>
            </div>
        </div>

        <!-- Example of another doctor -->
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="/doc3.png" class="card-img-top" alt="Doctor Image">
                <div class="card-body">
                    <h5 class="card-title">Dr. Emily Johnson</h5>
                    <p class="card-text"><strong>Specialization:</strong> Orthopedics</p>
                    <p>Dr. Emily Johnson is an expert in diagnosing and treating bone and joint conditions with modern techniques.</p>
                </div>
            </div>
        </div>
    </div>
</div>
